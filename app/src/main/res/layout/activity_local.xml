<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mathe.appsimposiohumanidades.LocalActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:text="O evento será realizado no IFSC - Campus Canoinhas" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Endereço:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Av. Expedicionários, 2150 - Bairro Campo da Água Verde - CEP 89460-000"
            android:layout_weight="0.15" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Telefone:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Fone: +55 (47) 3627-4500"
            android:layout_weight="0.28" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            app:srcCompat="@mipmap/mapa" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
